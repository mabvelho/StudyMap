<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnkiFragment">

    <TextView
        android:id="@+id/fcFront"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:text="\nComo que é o código para imprimir uma mensagem em Java?\n"
        android:textAlignment="center"
        android:textSize="24sp"
        android:clickable="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/fcBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
        android:text="\nclass HelloWorld {\n    public static void main(String[] args) {\n        System.out.println(&quot;Hello, World!&quot;); \n    }\n}\n"
        android:textSize="14sp"
        android:clickable="true"
        android:visibility="invisible"/>

</FrameLayout>